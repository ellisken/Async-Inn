@model IEnumerable<AsyncInn.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>

<h2>Rooms</h2>

<p>
    <a asp-controller="Home" asp-action="Index">Home</a>
    <a asp-action="Create" class="create">Create New</a>
</p>

<form method="post">
    <input type="text" asp-all-route-data="searchterm" placeholder="Enter search term here" name="searchString" />
    <button type="submit">Search</button>
</form>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layout)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Layout)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
